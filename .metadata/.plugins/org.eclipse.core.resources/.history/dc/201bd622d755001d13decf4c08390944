package Actividad_2_3_SincronizarHilos;

public class Ejercicio2 {

	private static final int NUM_HILOS = 4;
	
	public static void main(String[] args) {
		Ejercicio1_Colecta colecta = new Ejercicio1_Colecta();
		
		Ejercicio2_Recolectores[] hilos = new Thread[NUM_HILOS];
		
		for (int i = 0; i < NUM_HILOS; i++) {
			Ejercicio2_Recolectores Recolecor = new Ejercicio2_Recolectores(colecta);
			hilos[i] = Recolecor;
		}
		
		for (Thread Ejercicio2_Recolectores : hilos) {
			try {
				h.join();
			} catch (InterruptedException e) {}
		}
		System.out.println("TOTAL: "+colecta.getColecta());
	}
	
}
